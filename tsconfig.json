{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": false,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "*": ["./src/*", "./lambda/*"],
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
